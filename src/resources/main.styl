$dividerColor = #ccc;
$fontSize = 14px;

@import '../font-awesome/css/font-awesome.min.css';

html,
body {
	font-family: sans-serif;
	font-size: $fontSize;
	height: 100%;
	margin: 0;
	padding: 0;
}

a {
	text-decoration: none;
}

input {
	font-size: $fontSize;
}

@import 'button';
@import 'grid';
@import 'widget/ArticlePane';
@import 'widget/Form';

.feeds,
.articles,
.article {
	box-sizing: border-box;
	position: absolute;
}

.horizontal {
	.feeds,
	.articles,
	.article {
		top: 0;
		bottom: 0;
	}

	.feeds {
		border-right: 1px solid $dividerColor;
		left: 0;
		width: 20%;
	}

	.articles {
		border-right: 1px solid $dividerColor;
		left: 20%;
		width: 30%;
	}

	.article {
		right: 0;
		width: 50%;
	}
}

.hidden {
	display: none;
}
